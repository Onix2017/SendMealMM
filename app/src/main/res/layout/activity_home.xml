    android:layout_centerHorizontal="true"
    android:text="Bienvenido al mejor servicio de pedido de comidas On-Line"
    android:textColor="@color/colorPrimary"
    android:textSize="25dp"
    android:textAlignment="center"
    android:textAppearance="@style/Theme.AppCompat.Light.Dialog"
    ></TextView>
</RelativeLayout>